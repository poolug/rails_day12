<p id="notice"><%= notice %></p>

<h1>Historia de la mascota: <%= @pet.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Peso</th>
      <th>Altura</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.heigth %></td>
        <td><%= pet_history.description %></td>
        <td><%= link_to 'Show', pet_pet_history_path(pet_history.pet_id, pet_history.id) %></td>
        <td><%= link_to 'Edit', edit_pet_pet_history_path(pet_history.pet_id, pet_history.id) %></td>
        <td><%= link_to 'Destroy', pet_pet_histories_destroy_path(pet_history.pet_id, pet_history.id), method: :delete, data: { confirm: '¿Quiere eliminar el historial de esta mascota?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet History', new_pet_pet_history_path(@pet.id) %> |
<%= link_to 'Back', pet_path(@pet.id) %>